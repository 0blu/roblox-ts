{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"target": "es2017",
		"lib": ["es2017"],
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"strictNullChecks": true,
		// "noUnusedLocals": true,
		"esModuleInterop": true,
		"removeComments": true,
		"composite": true,

		"baseUrl": "src",
		"plugins": [{ "transform": "typescript-transform-paths" }],
	}
}
