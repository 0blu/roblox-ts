{
	"name": "roblox-ts",
	"version": "0.0.34",
	"description": "",
	"main": "out/index.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/roblox-ts/roblox-ts.git"
	},
	"bin": {
		"rbxtsc": "out/index.js"
	},
	"scripts": {
		"tslint": "npx tslint -p tsconfig.json",
		"prettylint": "npx prettylint --config ./.prettierrc.json \"**/*.ts\"",
		"test": "npm run build && nyc --reporter=html _mocha --timeout 0 --recursive out/test.js && lua tests/spec.lua",
		"coverage": "nyc report --reporter=text-lcov | coveralls",
		"prettier": "npx prettier --config ./.prettierrc.json --write \"**/*.ts\"",
		"build": "if [ \"$CI\" = true ]; then npx tsc -p tsconfig.ci.json; else npx tsc; fi",
		"prepublishOnly": "npm run build",
		"types": "cd tests && npm install rbx-types"
	},
	"nyc": {
		"extension": [
			".js"
		],
		"include": [
			"out/compiler"
		],
		"exclude": [
			"out/compiler/await.js"
		],
		"reporter": [
			"text-lcov"
		],
		"all": true
	},
	"author": "",
	"license": "MIT",
	"dependencies": {
		"chokidar": "^3.0.0",
		"cross-spawn": "^6.0.5",
		"fs-extra": "^8.0.1",
		"klaw": "^3.0.0",
		"luamin": "^1.0.4",
		"rojo-utils": "0.0.1",
		"ts-morph": "^2.2.0",
		"yargs": "^13.2.4"
	},
	"devDependencies": {
		"@types/cross-spawn": "^6.0.0",
		"@types/fs-extra": "^7.0.0",
		"@types/klaw": "^3.0.0",
		"@types/mocha": "^5.2.6",
		"@types/node": "^12.0.3",
		"@types/yargs": "^13.0.0",
		"coveralls": "^3.0.3",
		"mocha": "^6.1.4",
		"nyc": "^14.1.1",
		"prettier": "^1.17.1",
		"prettylint": "^1.0.0",
		"source-map-support": "^0.5.9",
		"ts-node": "^8.2.0",
		"tslint": "^5.16.0"
	}
}
