{
	"compilerOptions": {
		"module": "commonjs",
		"outDir": "out",
		"rootDir": "src",
		"target": "esnext",
		"strict": true,
		"lib": [ "es6" ],
		"noFallthroughCasesInSwitch": true,
		"strictNullChecks": true,
		"sourceMap": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules/**/*",
		"out/**/*"
	]
}
